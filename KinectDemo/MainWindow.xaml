<Window x:Class="KinectDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        Loaded="Window_Loaded" 
        KeyUp="Button_KeyUp" >
    <Grid>
        <TabControl>
            <TabItem Header="write">
                <Canvas>
                    <Image Name="camera" />
                    <Viewbox Stretch="Uniform">
                        <Canvas Name="canvas" Width="512" Height="424" />
                    </Viewbox>

                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="top"
                                Margin="10">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type RadioButton}">
                                <Setter Property="Margin" Value="5"/>
                            </Style>
                        </StackPanel.Resources>
                        <RadioButton x:Name="RadioForeign" GroupName="Mode" Content="Foreign" />
                        <RadioButton x:Name="RadioNative" GroupName="Mode" Content="Native" />
                        <WrapPanel>
                            <Label Content="Name" />
                            <TextBox Name="name" Width="70"/>
                        </WrapPanel>
                        <WrapPanel Margin="0 5">
                            <Label Content="Lang  " />
                            <TextBox Name="language" Width="50"/>
                        </WrapPanel>
                    </StackPanel>

                    <Label Name="recordLabel" Content="Recording" 
                           HorizontalAlignment="Center" VerticalAlignment="Bottom"
                           Foreground="Red" FontSize="20"
                           Margin="10"
                           Visibility="Hidden" />
                    <Label Name="buffer" Content="" 
                           HorizontalAlignment="Left" VerticalAlignment="Bottom"
                           Foreground="Red" FontSize="20"
                           Margin="10 85" />
                    <Label Name="fileName" Content="" 
                           HorizontalAlignment="Right" VerticalAlignment="Top"
                           Foreground="Red" FontSize="20"
                           Margin="10" />

                    <Button Content="Switch" 
                            Width="70" Height="30" 
                            Margin="10 50" 
                            HorizontalAlignment="Left" Canvas.Bottom="0" 
                            Click="SwitchSensor"/>
                    <Button Content="Record" 
                            Width="70" Height="30" 
                            Margin="10" 
                            HorizontalAlignment="Left" Canvas.Bottom="0"
                            Click="SwitchRecord"/>
                </Canvas>
            </TabItem>
            <TabItem Header="analyse">
                <Canvas>
                    <ListView Name="AnalyseFileListView" 
                              Width="300" Height="500" 
                              Margin="20" />
                    <StackPanel Canvas.Bottom="0" Canvas.Right="0" Margin="10">
                        <WrapPanel HorizontalAlignment="Right" Margin="5"><Label Content="id" /><TextBox Width="100" Name="AnalyseId"/></WrapPanel>
                        <ComboBox Name="AnalysisType"
                                  MinWidth="150"
                                  Margin="5"
                                  HorizontalAlignment="Right"/>
                        <Button Content="Choose File" 
                                Width="70" Height="30" 
                                Margin="5"
                                HorizontalAlignment="Right"
                                Click="ChooseAnalyseFile"/>
                        <Button Name="AnalyseBtn"
                                Content="Analyse" 
                                Width="70" Height="30" 
                                Margin="5" 
                                HorizontalAlignment="Right"
                                Click="Analyse"/>
                    </StackPanel>
                </Canvas>
            </TabItem>
            <TabItem Header="play">
                <Canvas>
                    <Viewbox Stretch="Uniform">
                        <Canvas Name="playerCanvas" Background="DarkGray" Width="730" Height="540" AllowDrop="true" Drop="FileDrop" />
                    </Viewbox>
                    <WrapPanel Canvas.Top="20" Canvas.Left="20"><Label Content="Speed" /><Slider Width="500" Name="SliderSpeed" Minimum="0.1" Maximum="4" Value="1" ValueChanged="SliderSpeedChanged" /></WrapPanel>
                    <Slider Canvas.Bottom="30" Canvas.Left="10" Height="250" Name="SliderY" Minimum="-100" Maximum="500" Value="150" Orientation="Vertical" ValueChanged="SliderYChanged">
                        <Slider.RenderTransform><RotateTransform Angle="180" CenterX="10" CenterY="120"></RotateTransform></Slider.RenderTransform>
                    </Slider>
                    <Slider Canvas.Bottom="10" Canvas.Left="20" Width="250" Name="SliderX" Minimum="-100" Maximum="500" Value="260" ValueChanged="SliderXChanged" />
                    <StackPanel Canvas.Bottom="0" Canvas.Right="0">
                        <Button Name="File" Content="File" 
                            Width="50" Height="20"
                            Margin="5"
                            HorizontalAlignment="Right"
                            Click="ChooseFile" />
                        <Button Name="Play" Content="Play" 
                            Width="50" Height="20"
                            Margin="5"
                            Click="PlayFile" />
                        <Button Name="Stop" Content="Stop" 
                            Width="50" Height="20"
                            Margin="5"
                            Click="StopPlayingFile" />
                    </StackPanel>
                    <Label Canvas.Bottom="10" Canvas.Right="100"  Name="PlayingFileName" />
                </Canvas>
            </TabItem>
            <TabItem Header="convert">
                <Canvas>
                    <ListView Name="ConvertFilesListView" 
                              Width="300" Height="500" 
                              Margin="20" />
                    <StackPanel Canvas.Bottom="0" Canvas.Right="0" Margin="10">
                        <WrapPanel HorizontalAlignment="Right" Margin="5"><Label Content="id" /><TextBox Width="100" Name="ConvertId"/></WrapPanel>
                        <WrapPanel HorizontalAlignment="Right" Margin="5"><Label Content="" Name="ConvertParametersDescription" /><TextBox Width="100" Name="ConvertParameters"/></WrapPanel>
                        <ComboBox Name="ConvertType"
                                  MinWidth="150"
                                  Margin="5"
                                  SelectionChanged="ConvertType_SelectionChanged"/>
                        <Button Content="Choose Files"
                                HorizontalAlignment="Right"
                                Width="70" Height="30" 
                                Margin="5"
                                Click="ChooseConvertFiles"/>
                        <Button Content="Convert" 
                                HorizontalAlignment="Right"
                                Width="70" Height="30" 
                                Margin="5"
                                Click="Convert"/>
                    </StackPanel>
                </Canvas>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
